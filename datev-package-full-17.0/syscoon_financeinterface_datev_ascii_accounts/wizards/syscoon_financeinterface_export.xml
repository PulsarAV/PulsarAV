<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="syscoon_financeinterface_export_datev_ascii_account_wizard_view" model="ir.ui.view">
        <field name="name">syscoon.financeinterface.export.datev.ascii.account.wizard.view</field>
        <field name="model">syscoon.financeinterface.export</field>
        <field name="inherit_id" ref="syscoon_financeinterface.syscoon_financeinterface_export_wizard_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <group name="datev_ascii_account_settings" invisible="mode != 'datev_ascii_accounts'">
                    <field name="datev_ascii_accounts_kind" required="mode == 'datev_ascii_accounts'"/>
                    <field name="datev_ascii_accounts_account_kind" required="mode == 'datev_ascii_accounts'" widget="radio"/>
                    <field name="datev_ascii_accounts_account" required="mode == 'datev_ascii_accounts'" widget="radio"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
