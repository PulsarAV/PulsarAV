<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View settings for Account Chart -->
    <record id="syscoon_financeinterface_datev_ascii_view_account_form" model="ir.ui.view">
        <field name="name">syscoon.financeinterface.datev.ascii.view.account.form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="export_finance_interface_active" invisible="1"/>
                <group name="syscoon_financeinterface_datev" string="Financeinterface" invisible="not export_finance_interface_active">
                    <field name="datev_automatic_account"/>
                    <field name="datev_automatic_tax" widget="many2many_tags" invisible="not datev_automatic_account"/>
                    <field name="datev_no_tax" invisible="not datev_automatic_account"/>
                    <field name="datev_vatid_required" invisible="not datev_automatic_account"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
