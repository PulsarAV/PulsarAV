<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="odoo_password_manager.PasswordPreview" owl="1">
        <div class="password-preview-container w-100">
            <div class="jstr-panel-header">
                <span class="password-preview-header jstr-functional-button"
                      title="click to remove this item from selection"
                      t-on-click.prevent="() => this._onOpenRecord()"
                >
                    <t t-out="record.name"/>
                </span>
                <sup>
                    <span class="jstr-functional-button jstr-functional-button-clear fa fa-ban"
                          title="click to remove this password from selection"
                          t-on-click.prevent="() => this._onRemoveFromSelection()"
                    />
                </sup>
            </div>
            <div class="jstr-panel-body">
                <div class="password-preview-table-container">
                    <table class="table table-sm table-borderless">
                        <tbody>
                            <tr t-if="record.user_name">
                                <td class="password-preview-label align-middle">
                                    User name
                                </td>
                                <td class="password-preview-value">
                                    <input class="o_field_char o_field_widget o_input"
                                           t-att-value="record.user_name"
                                           readonly="readonly"
                                           type="text"
                                    />
                                </td>
                                <td class="password-preview-buttons">
                                    <span class="fa fa-paste password-preview-button" t-on-click.prevent="(event) => this._onCopyToClipBoard(event, record.user_name)"/>
                                </td>
                            </tr>
                            <tr t-if="this.state.password">
                                <td class="password-preview-label align-middle">
                                    Password
                                </td>
                                <td class="password-preview-value">
                                    <input class="o_field_char o_field_widget o_input"
                                           t-att-value="this.state.password"
                                           readonly="readonly"
                                           type="password"
                                           t-attf-id="password_preview_input_#{record.id}"
                                    />
                                </td>
                                <td class="password-preview-buttons">
                                    <span class="fa fa-paste password-preview-button" t-on-click.prevent="(event) => this._onCopyPassword(event)"/>
                                    <span class="fa fa-eye password-preview-button" t-on-click.prevent="(event) => this._onTogglePassword(event)"/>
                                </td>
                            </tr>
                            <tr t-if="record.link_url">
                                <td class="password-preview-label align-middle">
                                    URL
                                </td>
                                <td class="password-preview-value">
                                    <input class="o_field_char o_field_widget o_input"
                                           t-att-value="record.link_url"
                                           readonly="readonly"
                                           type="text"
                                    />
                                </td>
                                <td class="password-preview-buttons">
                                    <span class="fa fa-paste password-preview-button" t-on-click.prevent="(event) => this._onCopyToClipBoard(event, record.link_url)"/>
                                    <span class="fa fa-external-link password-preview-button" t-on-click.prevent="() => this._onOpenUrl(record.link_url)"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>

</templates>