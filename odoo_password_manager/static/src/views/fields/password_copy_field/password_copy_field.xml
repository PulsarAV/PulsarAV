<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="odoo_password_manager.PasswordCopyField" t-inherit="web.CharField" t-inherit-mode="primary" owl="1">
        <xpath expr="//input" position="after">
            <span class="password-copy-buttons" t-if="this.value or props.isPassword">
                <i class="fa fa-clipboard mx-1 password-copy-button" t-if="this.value" t-on-click.prevent="(event) => this._onCopyClipboard(event)"></i>
                <i class="fa fa-eye mx-1 password-copy-button" t-if="(this.value or props.logIn) and props.isPassword" t-on-click.prevent="() => this._onShowPassword()"></i>
                <i class="fa fa fa-rotate-left mx-1 password-copy-button" t-if="props.isPassword and !props.logIn" t-on-click.prevent="() => this._onGeneratePassword()"></i>
                <i class="fa fa-external-link mx-1 password-copy-button" t-if="this.value and props.isExternalLink" t-on-click.prevent="() => this._onOpenLink()"></i>
            </span>
        </xpath>
        <xpath expr="//input" position="attributes">
            <attribute name="t-attf-style">padding-right: #{props.inputPadding}px !important;</attribute>
            <attribute name="t-att-type">state.isPassword ? 'password' : 'text'</attribute>
            <attribute name="t-on-keydown">(event) => this._onKeydown(event)</attribute>
        </xpath>
    </t>

</templates>
