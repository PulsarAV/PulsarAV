<?xml version="1.0"?>
<odoo>

    <record id="password_bundle_view_search" model="ir.ui.view">
        <field name="name">password.bundle.search</field>
        <field name="model">password.bundle</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name', 'ilike', self)]" string="Reference or URL"/>
                <field name="notes"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="password_bundle_view_form" model="ir.ui.view">
        <field name="name">password.bundle.form</field>
        <field name="model">password.bundle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(odoo_password_manager.password_key_action)d" type="action" class="oe_stat_button" icon="fa-lock" groups="base.group_user" context="{'with_bundle': 1, 'default_bundle_id': id, 'default_bundle_ids': [id]}">
                            <field string="Passwords" name="passwords_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Bundle reference" class="oe_inline" required="1"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Access Levels">
                            <label for="access_ids"/>
                            <field name="access_ids">
                                <tree editable="bottom">
                                    <field name="user_id"
                                           options="{'no_create_edit': 1, 'no_quick_create': 1}"
                                           readonly="group_id"
                                           required="not group_id"
                                           domain="[('share', '=', False)]"
                                    />
                                    <field name="group_id"
                                           options="{'no_create_edit': 1, 'no_quick_create': 1}"
                                           readonly="user_id"
                                           required="not user_id"
                                    />
                                    <field name="access_level" required="1"/>
                                    <field name="responsible_for_update" readonly="group_id"/>
                                </tree>
                            </field>
                            <group>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </page>
                        <page string="Extra Security">
                            <group string="Extra Password">
                                <field name="extra_password_security"/>
                                <field name="extra_password_setup" invisible="1"/>
                                <label for="password" class="oe_edit_only" invisible="not extra_password_security or extra_password_setup"/>
                                <field name="password"
                                       password="True"
                                       invisible="not extra_password_security or extra_password_setup"
                                       required="extra_password_security and not extra_password_setup"
                                       class="oe_edit_only"
                                       nolabel="1"
                                />
                                <label for="confirm_password" class="oe_edit_only" invisible="not extra_password_security or extra_password_setup"/>
                                <field name="confirm_password"
                                       password="True"
                                       class="oe_edit_only"
                                       nolabel="1"
                                       invisible="not extra_password_security or extra_password_setup"
                                       required="extra_password_security and not extra_password_setup"
                                />
                                <field name="session_length" invisible="not extra_password_security"/>
                                <button name="action_update_bundle_password"
                                        type="object"
                                        string="Update password"
                                        class="oe_link"
                                        context="{'default_bundle_id': id}"
                                        colspan="2"
                                        invisible="not extra_password_security or not extra_password_setup"
                                />
                            </group>
                            <group string="Encryption">
                                <button name="action_update_bundle_key"
                                        type="object"
                                        string="Update Encryption Key and Salt"
                                        class="oe_link"
                                        context="{'default_bundle_id': id}"
                                        colspan="2"
                                />
                            </group>
                            <group string="Update policies">
                                <field name="update_policy"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="password_bundle_view_kanban" model="ir.ui.view">
        <field name="name">password.bundle.kanban</field>
        <field name="model">password.bundle</field>
        <field name="arch" type="xml">
            <kanban js_class="bundle_kanban" class="oe_background_grey o_kanban_dashboard" action="%(odoo_password_manager.password_key_action)d" type="action" context="{'with_bundle': 1, 'default_bundle_id': id, 'default_bundle_ids': [id]}">
                <field name="id"/>
                <field name="name"/>
                <field name="color"/>
                <field name="passwords_count"/>
                <templates>
                    <t t-name="kanban-menu">
                        <div class="container">
                            <div class="o_kanban_card_manage_settings row">
                                <div class="col-6" role="menuitem" aria-haspopup="true">
                                    <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>
                                </div>
                                <div role="menuitem" class="col-6">
                                    <a class="dropdown-item" role="menuitem" type="edit">Settings</a>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon">
                            <div class="oe_kanban_details d-flex flex-column">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <span><t t-out="record.name.value"/></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left"/>
                                    <div class="oe_kanban_bottom_right">
                                        <a name="%(odoo_password_manager.password_key_action)d" type="action" context="{'with_bundle': 1, 'default_bundle_id': id, 'default_bundle_ids': [id]}">
                                            <i class="fa fa-lock"> </i> <field name="passwords_count"/> Password(s)
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="password_bundle_action" model="ir.actions.act_window">
        <field name="name">Passwords Bundles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">password.bundle</field>
        <field name="view_mode">kanban,form</field>
        <field name="search_view_id" eval="password_bundle_view_search"/>
    </record>

</odoo>
