<?xml version="1.0"?>
<odoo>

    <record id="portal_password_bundle_view_search" model="ir.ui.view">
        <field name="name">portal.password.bundle.search</field>
        <field name="model">portal.password.bundle</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="bundle_id"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Bundle" name="group_bundle_id" context="{'group_by':'bundle_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="portal_password_bundle_view_form" model="ir.ui.view">
        <field name="name">portal.password.bundle.form</field>
        <field name="model">portal.password.bundle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Vault Name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <field name="bundle_id" invisible="1" options="{'no_create_edit': 1, 'no_quick_create': 1}"/>
                        <field name="password" widget="PasswordCopy" password="True"/>
                        <field name="confirm_password" class="oe_edit_only" password="True"/>
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create_edit': 1, 'no_quick_create': 1}"/>
                        <field name="valid_until"/>
                        <field name="session_length"/>
                        <field name="active" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Shared Passwords">
                            <field name="password_ids"
                                   widget="many2many_tags"
                                   options="{'no_create_edit': 1, 'no_quick_create': 1}"
                                   domain="[('bundle_id', '=', bundle_id)]"
                            />
                        </page>
                        <page string="Notes">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="portal_password_bundle_view_tree" model="ir.ui.view">
        <field name="name">portal.password.bundle.tree</field>
        <field name="model">portal.password.bundle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="name"/>
                <field name="active" column_invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="portal_password_bundle_action" model="ir.actions.act_window">
        <field name="name">Portal Vaults</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">portal.password.bundle</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" eval="portal_password_bundle_view_search"/>
    </record>

</odoo>
