<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="mail_activity_data_update_password" model="mail.activity.type">
            <field name="name">Update Password</field>
            <field name="icon">fa-lock</field>
            <field name="delay_count">0</field>
            <field name="sequence">98</field>
        </record>
        <record id="portal_vault_invitation" model="mail.template">
            <field name="name">Portal Vault Invitation</field>
            <field name="auto_delete" eval="True"/>
            <field name="model_id" ref="odoo_password_manager.model_portal_password_bundle"/>
            <field name="body_html" type="html">
<p>Hello,</p>
<p>You are granted access to the password vault <a t-attf-href="/my/password_vaults/#{object.id}"><t t-out="object.name"/></a></p>
<p>To access the vault, please use the password: <b><t t-out="object.read(['password'])[0].get('password')"/></b></p>
            </field>
        </record>
    </data>
</odoo>
